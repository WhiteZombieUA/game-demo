extends layouts/main.jade
block body
    .col-xs-8.col-xs-offset-2.col-sm-4.col-sm-offset-4.col-md-3.col-md-offset-4.col-lg-3.col-lg-offset-4
        .row
            img.img-responsive.img-circle(src="/images/logo.png")
        .row
            .panel.panel-default
                .panel-heading
                    h1 Sign In
                .panel-body
                    form(action="/login" method = "post" autocomplete="on")
                        .row
                            input.form-control(type="text" autofocus="" required="" name="nickname" value="" placeholder="Username")
                        .row
                            input.form-control(type="password" autofocus="" required="" name="password" value="" placeholder="Password")
                        .row
                            a(href="/signup") Not a member yet ?
                        .row
                            input.btn.btn-lg.btn-success.btn-block(type="submit" value="Login")
