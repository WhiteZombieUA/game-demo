extends layouts/main.jade
block body
    .col-xs-12.col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3.col-lg-6.col-lg-offset-3
        .row
            .panel.panel-default
                .panel-heading
                    h2 #{log.username1} vs #{log.username2}
            .panel.panel-default
                .panel-heading
                    h3 Turn 1
                .panel-body
                    .row
                        .col-xs-3.col-sm-3.col-md-3.col-lg-3
                            img.img-responsive.img-thumbnail(src="/images/as#{log.p1attack1}.png")
                        .col-xs-6.col-sm-6.col-md-6.col-lg-6
                            img.img-responsive.img-thumbnail(src="/images/right.png")
                            | #{turn1part1}
                        .col-xs-3.col-sm-3.col-md-3.col-lg-3
                            img.img-responsive.img-thumbnail(src="/images/ds#{log.p2defence1}.png")
                    .row
                        .col-xs-3.col-sm-3.col-md-3.col-lg-3
                            img.img-responsive.img-thumbnail(src="/images/ds#{log.p1defence1}.png")
                        .col-xs-6.col-sm-6.col-md-6.col-lg-6
                            img.img-responsive.img-thumbnail(src="/images/left.png")
                            | #{turn1part2}
                        .col-xs-3.col-sm-3.col-md-3.col-lg-3
                            img.img-responsive.img-thumbnail(src="/images/as#{log.p2attack1}.png")
            .panel.panel-default
                .panel-heading
                    h3 Turn 2
                .panel-body
                    .row
                        .col-xs-3.col-sm-3.col-md-3.col-lg-3
                            img.img-responsive.img-thumbnail(src="/images/as#{log.p1attack2}.png")
                        .col-xs-6.col-sm-6.col-md-6.col-lg-6
                            img.img-responsive.img-thumbnail(src="/images/right.png")
                            | #{turn2part1}
                        .col-xs-3.col-sm-3.col-md-3.col-lg-3
                            img.img-responsive.img-thumbnail(src="/images/ds#{log.p2defence2}.png")
                    .row
                        .col-xs-3.col-sm-3.col-md-3.col-lg-3
                            img.img-responsive.img-thumbnail(src="/images/ds#{log.p1defence2}.png")
                        .col-xs-6.col-sm-6.col-md-6.col-lg-6
                            img.img-responsive.img-thumbnail(src="/images/left.png")
                            | #{turn2part2}
                        .col-xs-3.col-sm-3.col-md-3.col-lg-3
                            img.img-responsive.img-thumbnail(src="/images/as#{log.p2attack2}.png")
            .panel.panel-default
                .panel-heading
                    h3 Turn 3
                .panel-body
                    .row
                        .col-xs-3.col-sm-3.col-md-3.col-lg-3
                            img.img-responsive.img-thumbnail(src="/images/as#{log.p1attack3}.png")
                        .col-xs-6.col-sm-6.col-md-6.col-lg-6
                            img.img-responsive.img-thumbnail(src="/images/right.png")
                            | #{turn3part1}
                        .col-xs-3.col-sm-3.col-md-3.col-lg-3
                            img.img-responsive.img-thumbnail(src="/images/ds#{log.p2defence3}.png")
                    .row
                        .col-xs-3.col-sm-3.col-md-3.col-lg-3
                            img.img-responsive.img-thumbnail(src="/images/ds#{log.p1defence3}.png")
                        .col-xs-6.col-sm-6.col-md-6.col-lg-6
                            img.img-responsive.img-thumbnail(src="/images/left.png")
                            | #{turn3part2}
                        .col-xs-3.col-sm-3.col-md-3.col-lg-3
                            img.img-responsive.img-thumbnail(src="/images/as#{log.p2attack3}.png")
            .panel.panel-default
                .panel-heading
                    h2 Result
                .panel-body
                    .row
                        .col-xs-4.col-sm-4.col-md-4.col-lg-4
                            .progress
                                .progress-bar-danger(role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width:#{p1hp}%")
                                    | #{p1hp}%
                            br
                            .progress
                                .progress-bar-danger(role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width:#{p2hp}%")
                                    | #{p2hp}%
                        .col-xs-4.col-sm-4.col-md-4.col-lg-4
                            br
                            | #{winer}
                        .col-xs-4.col-sm-4.col-md-4.col-lg-4
                            form(action="/result" method = "post" autocomplete="on")
                                input(name="winer" type="hidden" value="#{winer}")
                                input.btn-lg.btn-default(type="submit" value="OKAY!)")